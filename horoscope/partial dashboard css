body {
    background: linear-gradient(to bottom, #000000, #166d3b); /* Dark green to black gradient */
    background-size: cover;
    background-attachment: fixed;
    position: relative;
    height: 100vh; /* Full viewport height */
    overflow: hidden;
}

/* Add starry effect using CSS */
body::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url('https://www.transparenttextures.com/patterns/stardust.png') repeat;
    opacity: 0.3; /* Make the stars less intense */
}


/* Style for the Zodiac Sign heading */
.zodiac-heading {
    font-family: 'Nunito', sans-serif;
    font-weight: bold; /* Make text bold */
    text-align: center;
    color: white; /* White text color for better contrast */
    margin-bottom: 30px;
}

/* Card hover effect */
.card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    background-color: #ffffff; /* Default background color for cards */
    border: 1px solid #ccc;
    position: relative; /* Ensure cards are on top of the background */
    z-index: 20; /* Make sure cards are above the galaxy background */
}

/* Hover effect for the cards */
.card:hover {
    transform: translateY(-10px); /* Pop-up effect */
    box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1); /* Shadow effect */
    background-color: #edc001; /* British Yellow on hover */
}
